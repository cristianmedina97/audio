import math
import matplotlib.pylab as plt

class Square:
        wavearray = []
        def __init__(self, frecuencia, sampling, amplitud, time):
            self.SamplingRate = sampling
            self.Amplitud = amplitud
            self.Seconds = time
            self.Frecuencia = frecuencia
            self.tamano = sampling * time

        def generarC(self):

            for i in range (0, self.tamano):
                    A = self.Amplitud / 100
                    datos = 0
                    for j in range (0, 100):
                        par = j % 2
                        if par:
                            value = math.sin((j*math.pi*self.Frecuencia*i)/self.SamplingRate)
                            datos = datos + value
                    frame = datos * A
                    Square.wavearray.append(frame)




            print max(Square.wavearray)
            return Square.wavearray


        def graficarC(self, array):
                plt.plot(array, color="green", linewidth=1.0, linestyle="-")
                plt.show()
